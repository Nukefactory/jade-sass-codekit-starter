//-layout
doctype html
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Nukefactory
    block stylesheets
      link(rel='stylesheet', href='css/app.css')
    //-Jade mixins
    block mixins
      include ../includes/_mixins.jade
  body
    //-Main menu
    include ../includes/_menu-centered.html
    //-Main wrapper
    .row.column#nf-main-wrapper
      //-Template sections
      block content
    block footer
      include ../includes/_footer.jade


    //-Scripts
    include ../includes/_scripts.jade
